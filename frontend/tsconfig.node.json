{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "es2020",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "strict": true
  },
  "include": [
    "vite.config.ts",
    "scripts",
    "build"
  ]
}
